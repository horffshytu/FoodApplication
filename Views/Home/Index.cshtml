@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="row shadow rounded">
        <div class="col-sm-12 col-md-6 col-lg-6 col-xl-6">
            <div id="carouselExampleSlidesOnly" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner h-100">
                    <div class="carousel-item h-100 active">
                        <img src="~/images/carouselImages/img 1.jpg" 
                            class="d-block w-100 h-100" alt="Recipes">
                    </div>
                    <div class="carousel-item h-100 active">
                        <img src="~/images/carouselImages/img 2.jpg" 
                            class="d-block w-100 h-100" alt="Recipes">
                    </div>
                    <div class="carousel-item h-100 active">
                        <img src="~/images/carouselImages/img 3.jpg" 
                            class="d-block w-100 h-100" alt="Recipes">
                    </div>
                 </div>
            </div>
        </div>
        <div class="col-sm-12 col-md-6 col-lg-6 col-xl-6">
            <div class="mb-3">
                <h2>Get The Best <span class="text-success fst-italic">Food</span> From 
                <span class="text-success">The Best Restaurants.</span></h2>
            </div>
            <div class="mb-1 p-3">
                <span><i class="fa-solid fa-seedling text-success mx-2 fs-4"></i></span>
                <span class="fs-5 text-dark fst-italic">Fresh Food</span>
            </div>
            <div class="mb-1 p-3">
                <span><i class="fa-solid fa-wheat-awn text-success mx-2 fs-4"></i></span>
                <span class="fs-5 text-dark fst-italic">Healthy Meal</span>
            </div>
            <div class="mb-1 p-3">
                <span><i class="fa-solid fa-person-biking text-success mx-2 fs-4"></i></span>
                <span class="fs-5 text-dark fst-italic">Fastest Delivery</span>
                <p class="py-2">We Promise Deliver Order within 30 Min</p>
            </div>
        </div>
    </div>
    <div class="row mt-3">
        <div class=" col-12 mb-3">
            <h2 class="text-dark fst-italic">Today's Special</h2>
            <div id="todaySpecial" class="row">
                <div class="col-sm-4 col-md-4 col-lg-4 col-xl-4">
                    <div class="shadow rounded card dishCard">
                        <img class="card-ing-top h-75" 
                                src="http://forkify-api.herokuapp.com/images/BBQChickenPizzawithCauliflowerCrust5004699695624ce.jpg" alt="dish" />
                        <div class="card-body">
                            <p class="card-title fw-bold">Pizza</p>
                        </div>
                    </div>
                </div>
                <div class="col-sm-4 col-md-4 col-lg-4 col-xl-4">
                    <div class="shadow rounded card dishCard">
                        <img class="card-ing-top h-75" 
                                src="http://forkify-api.herokuapp.com/images/gelatin_poke_cake2d07.jpg" />
                        <div class="card-body">
                            <p class="card-title fw-bold">Cake</p>
                        </div>
                    </div>
                </div>
                <div class="col-sm-4 col-md-4 col-lg-4 col-xl-4">
                    <div class="shadow rounded card dishCard">
                        <img class="card-ing-top h-75" 
                                src="http://forkify-api.herokuapp.com/images/nobake_276e5.jpg" />
                        <div class="card-body">
                            <p class="card-title fw-bold">Strawberry</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
